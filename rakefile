task :default => :new
require 'fileutils'
desc "创建新 post"
task :new do
  puts "请输入要创建的 post URL："
	@url = STDIN.gets.chomp
	puts "请输入 post 标题："
	@name = STDIN.gets.chomp
    puts "请输入 category 分类, 以空格隔开："
	@categories = STDIN.gets.chomp
	puts "请输入 type 分类, 以空格隔开："
	@type = STDIN.gets.chomp
	puts "请输入 tags 分类, 以空格隔开："
    @tags = STDIN.gets.chomp
	@slug = "#{@url}"
	@slug = @slug.downcase.strip.gsub(' ', '-')
	@date = Time.now.strftime("%F")
	# @post_name = "_posts/#{@categories}/#{@type}/#{@tags}/#{@date}-#{@slug}.md"
	@post_name = "_drafts/#{@date}-#{@slug}.md" #创建草稿
	@author = "Zerol"
	if File.exist?(@post_name)
			abort("文件名已经存在！创建失败")
	end
	FileUtils.touch(@post_name)
	open(@post_name, 'a') do |file|
			file.puts "---"
			file.puts "layout: post"
			file.puts "title: \"#{@name}\""
            file.puts "tags: #{@tags}"
			file.puts "type: #{@type}"
			file.puts "category: #{@categories}"
			file.puts "author: \"#{@author}\""
			file.puts "created: #{Time.now}"
			file.puts "---"
	end
	exec "code #{@post_name}"
end